*
  margin 0
  padding 0

#footer
  background-color #4C4D4F

  .main_ftr
    display flex
    justify-content space-between
    padding 40px 70px 16px

    .logo_ftr
      font-size 14px
      width 35%
      color #939395

    .rubric
      width 25%

      .rubric_list
        list-style none
        a
          font-size 14px
          color #939395
          text-decoration none

        a:hover
          color #3D77A5

    .contact_list
      list-style none
      font-size 14px
      color #939395

      li
        padding 5px 0

    .titel
      text-transform uppercase
      padding-bottom 25px
      color #6D6D6F

  .sub_ftr
    display flex
    justify-content space-between
    padding 30px 70px
    border-top 2px solid #242424
    border-bottom 8px solid #242424

    form
      display flex

      [type='text']
        background-color #2E2E2E
        height 26px
        width 221px
        border-color transparent

      [type='submit']
        border-color transparent
        width 33px
        height 30px
        background-color #7D7D7D

    .social_list
      display flex
      list-style none

      li
        padding 0 5px

      .link
        display block
        width 30px
        height 30px
        background-color #2E2E2E
