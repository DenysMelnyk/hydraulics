#ourContacts
  max-width 960px
  margin 0 auto
  padding-top 50px
  *
    margin 0
    padding 0
  .flex_contacts
    padding 10px 0 50px
    display flex
    justify-content space-around
    h2
      font-size 30px
      width 180px
      padding 5px 0
      margin-bottom 10px
      letter-spacing 4px
      border-bottom 1px solid #000
      color #E40010
    .contacts_list
      list-style none
    li
      font-size 19px
      color #666
      padding 5px 0 5px 40px
      .our_site
        text-decoration none
        color #999
      .our_site:hover
        color #39c
      .our_site:active
        color #666
  form
    width 50%
    padding 25px 30px 35px
    -webkit-box-shadow -1px -1px 18px -4px rgba(0,0,0,0.75)
    -moz-box-shadow -1px -1px 18px -4px rgba(0,0,0,0.75)
    box-shadow -1px -1px 18px -4px rgba(0,0,0,0.75)
    h3
      font-size 26px
      padding 5px 0
    .question
      padding 5px 0 10px
      margin-bottom 10px
      color #5A5A5A
      border-bottom 1px solid #DECFC5
    .flex_input
      display flex
      width 100%
      justify-content space-between
    .short
      width 48%
    p
      font-size 19px
      padding 10px 0
      [type='text']
        width 100%
    [type='text']
    [type='tel']
      border none
      background-color #F8F9FD
      height 36px
      text-indent 10px
      font-size 15px
    textarea
      width 100%
      background-color #F8F9FD
      border none
      height 80px
    [type='submit']
      margin 10px
      border none
      background transparent
      text-transform uppercase
      font-size 16px
      color #E00713
      cursor pointer
  .google_map
    height 300px
    border-top 1px solid #000
    border-bottom 1px solid #000
