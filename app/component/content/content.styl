#content
  margin 0 auto
  max-width 960px
  padding 40px 0 90px
  *
    margin 0
    padding 0

  .content_item
    display flex
    justify-content space-around

    article
      display flex
      flex-direction column
      align-items center
      width 25%

      .catalog
        width 120px
        height 30px
        font-size 12px
        background-color #DE030E
        border-radius 17px
        color #fff
        border-color transparent
        margin-bottom 20px

      h3
        display block
        width 150px
        text-align center
        padding 10px 0

      .goods_item
        list-style none

        a
          text-decoration none
          color #518ABE

    .question
      width 35%

      p
        text-align center
        font-size 18px
        padding-bottom 15px

        span
          font-size 21px

      .consultation
        width 180px
        height 30px
        border-color transparent
        background-color #DE030E
        border-radius 17px
        color #fff
        font-size 12px

    .contacts
      width 35%

      .contacts_list
        list-style none

        li
          padding 5px 0 5px 20px
