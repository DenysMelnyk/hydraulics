#root
  overflow hidden
  min-width 480px
  max-width 1024px
  margin 0 auto
  -webkit-box-shadow 0px 0px 18px 1px rgba(0,0,0,0.79)
  -moz-box-shadow 0px 0px 18px 1px rgba(0,0,0,0.79)
  box-shadow 0px 0px 18px 1px rgba(0,0,0,0.79)
  font-family 'Open Sans', Arial, sans-serif
#header
  display flex
  justify-content center
  background-color #EDEDED
*
  margin 0
  padding 0
  .wrapper
    padding 20px 0 20px
    display flex
    justify-content space-around
    align-items center
    width 100%
    min-width 480px
    max-width 960px

  .conteiner
    display flex
    width 66%
    justify-content space-between
    align-items center

    .menu
      display flex
      align-items center
      justify-content center
      flex-wrap wrap
      margin 0

    ul
      list-style none

      .menu_item
        padding 8px 5px

        .menu_link
          font-size 14px
          padding 0 10px
          text-decoration none
          color #333
        .menu_link:hover
          color #c00
        .active
          padding 0 6px
          display block
          height  25px
          line-height 25px
          border-radius 15px
          background-color #c00
          color #fff
        .active:hover
          color #fff

  .cole
    // margin-left 20px
    width 150px
    min-width 150px
    height 30px
    background-color #DE030E
    border-radius 17px
    color #fff
    border none
    cursor pointer
  .cole:hover
    background-color #c33
  .cole:active
    background-color #900
    outline none
  .cole:focus
    outline none

  .contact
    display inline-block
    list-style none
    width 105px
    padding 15px 0 15px 10px
    margin 0

  .contact_item
    font-size 14px
    padding 5px 0

  .modal-container
    position relative
  .modal-container .modal, .modal-container .modal-backdrop
    position absolute
  .modal-header
    border none
    padding 15px 15px 5px
  .modal-title
    font-weight bold

.modal-content
  padding 30px 40px 0
  .modal-body
    padding 0 15px 15px
    form
      padding-top 25px
    h3
      font-size 26px
      padding 5px 0
    .question
      padding 5px 0 30px
      margin-bottom 10px
      color #5A5A5A
      border-bottom 1px solid #e5e5e5
    .flex_input
      display flex
      width 100%
      justify-content space-between
    .short
      width 49%
    p
      font-size 16px
      padding 10px 0
      [type='text']
        width 100%
    [type='text']
    [type='tel']
      font-size 14px
      text-indent 10px
      border none
      background-color #F8F9FD
      height 36px
    textarea
      width 100%
      background-color #F8F9FD
      border none
      height 80px
    [type='submit']
      font-size 19px
      margin-top 21px
      border none
      background transparent
      text-transform uppercase
      color #E00713
      cursor pointer
  .modal-footer
    border-top none
    padding-top 0


@media screen and (min-width: 320px) and (max-width: 560px)
  // .logo
  //   display none
  .conteiner
    flex-wrap wrap
  .wrapper
    justify-content center
    flex-wrap wrap
    align-items center
  .menu
    padding 30px 0

@media screen and (min-width: 320px) and (max-width: 950px)
  .contact
    display none
  .conteiner
    justify-content space-around
    width 100%
