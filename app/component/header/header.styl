*
  margin 0
  padding 0
  
#header
  padding 0 100px
  font-size 12px
  display flex
  align-items center
  justify-content space-around
  background-color #EDEDED
  color #1A1A1A

  .menu
    display flex

  ul
    list-style none
    text-decoration none

    .menu_item
      padding 0 16px

      .menu_link
        text-decoration none
        color #1A1A1A

.cole
  width 150px
  height 30px
  background-color #DE030E
  border-radius 17px
  color #fff
  border-color transparent

.contact
  padding 15px 0

.contact_item
  padding 5px 0
