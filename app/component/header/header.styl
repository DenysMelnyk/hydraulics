#header
  padding 0 100px
  font-size 12px
  display flex
  align-items center
  justify-content space-around
  background-color #EDEDED
  color #1A1A1A
*
  margin 0
  padding 0

  .menu
    display flex
    align-items center

  ul
    list-style none
    text-decoration none

    .menu_item
      padding 0 10px

      .menu_link
        padding 0 6px
        text-decoration none
        color #1A1A1A
      .menu_link:hover
        color #c00  
      .menu_link:focus
        padding 0 6px
        display block
        height  20px
        line-height 20px
        border-radius 15px
        background-color #c00
        color #fff

.cole
  width 150px
  height 30px
  background-color #DE030E
  border-radius 17px
  color #fff
  border none
  cursor pointer

.contact
  padding 15px 0

.contact_item
  padding 5px 0
