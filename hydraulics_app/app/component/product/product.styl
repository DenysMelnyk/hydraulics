@media only screen and (min-width: 48em)
  .container
    width: 61rem !important

@media only screen and (min-width: 64em)
  .container
    width: 787px !important

@media only screen and (min-width: 75em)
  .container
    width 1024px !important




#product
  .container
    max-width 1024px
  margin 0 auto
  padding 50px 0
  *
    margin 0
    padding 0
  .black_line
    width 127px
    border-bottom 1px solid #000
  h2
    letter-spacing 1px
    padding-bottom 12px
  .product_page
    display flex
    flex-direction column
    padding-bottom 40px
    h2
      padding 15px 0
      color #E00713
    img
      padding 30px 0
    .description
      align-self center
      h3
        padding 5px 0
      h4
        padding 0 0 5px
        color #868686
      p
        padding 5px 0
        color #666666
      .remark
        font-size 10px
        padding 0 0 5px
        color #BEBEBE
  .similar_products
    article

      margin 10px 10px 10px 10px
      //background-color gray
      border 1px solid black
      position relative
      height 273px
      img
        position relative
        display: block
        margin: 0 auto
        max-width 220px
        height 150px
        padding-bottom 5px
      div
        padding 0 20px
        h4
          text-align center
          padding 5px 0
        h5
          text-align center
          padding 5px 0
          color #868686
      button
        position absolute
        width 135px
        left 50%
        bottom 5px
        margin-left -62px
        height 30px
        border none
        border-radius 15px
        background-color #E1010F
        font-size 12px
        color #fff
        cursor pointer
