#contactForm
  form
    h3
      font-size 26px
      padding 5px 0
    .question
      padding 5px 0 10px
      margin-bottom 10px
      color #5A5A5A
      border-bottom 1px solid #DECFC5
    .flex_input
      display flex
      width 100%
      justify-content space-between
    .short
      width 48%
    p
      font-size 19px
      padding 10px 0
      [type='text']
        width 100%
    [type='text']
    [type='tel']
      text-indent 10px
      border none
      background-color #F8F9FD
      height 36px
    textarea
      width 100%
      background-color #F8F9FD
      border none
      height 80px
      max-width 490px
    [type='submit']
      font-size 19px
      margin 10px
      border none
      background transparent
      text-transform uppercase
      color #E00713
      cursor pointer
  .google_map
    height 300px
    border-top 1px solid #000
    border-bottom 1px solid #000
