#catalog
  margin 0 auto
  max-width 960px
  padding 50px 0
  *
    margin 0
    padding 0

  .title
    font-size 30px
    padding 10px 0 10px 50px
    color #DE030E

  .line
    width 150px
    border-top 1px solid #222222
    margin-bottom 20px
    margin-left 50px

  .content_item
    display flex
    flex-wrap wrap
    justify-content space-around
    padding 5px 35px 36px

    article
      display flex
      flex-direction column
      align-items center
      // width 27%

      .catalog
        width 120px
        height 30px
        font-size 12px
        background-color #DE030E
        border-radius 17px
        color #fff
        border none
        margin-bottom 20px
        cursor pointer
      .catalog:hover
        background-color #c33
      .catalog:active
        background-color #900
        outline none
      .catalog:focus
        outline none

      h3
        width 245px
        font-size 26px
        text-align center
        padding 10px 0

      .goods_item
        list-style none

        a
          font-size 17px
          text-decoration none
          color #518ABE
        a:hover
          color #666
  .bg_color:hover
    opacity 0.9
    background-color rgb(153,153,153)
  .bg_color:active
    opacity 0.5
    background-color rgb(255,255,255)

  .grand_auto
    display flex
    flex-direction column
    align-items center
    padding-top 20px
    .grand_info
      padding 5% 15%
      h2
        font-size 24px
        padding 5px 0 10px
        text-align center
      p
        color #666
        font-size 17px
        padding 5px 0

  @media screen and (min-width: 320px) and (max-width: 735px)
    article
      padding-bottom 40px
