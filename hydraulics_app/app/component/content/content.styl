#content
  margin 0 auto
  max-width 960px
  padding 40px 0 90px
  *
    margin 0
    padding 0

  .content_item
    padding 5% 0
    display flex
    flex-wrap wrap
    justify-content space-around

    .goods
      display flex
      flex-direction column
      align-items center

      .catalog
        width 120px
        height 30px
        font-size 12px
        background-color #DE030E
        border-radius 17px
        color #fff
        border none
        margin-bottom 20px
        cursor pointer
      .catalog:hover
        background-color #c33
      .catalog:active
        background-color #900
        outline none
      .catalog:focus
        outline none

      .goods_title
        width 245px
        font-size 26px
        text-align center
        padding 20px 0

      .goods_item
        list-style none

        a
          font-size 18px
          text-decoration none
          color #518ABE

    .question
      width 43%

      p
        text-align center
        color #666
        font-size 22px
        padding-bottom 15px

        span
          font-size 21px

      .consultation
        width 180px
        height 30px
        border none
        background-color #DE030E
        border-radius 17px
        color #fff
        font-size 12px
        cursor pointer
      .consultation:hover
        background-color #c33
      .consultation:active
        background-color #900
        outline none
      .consultation:focus
        outline none

    .contacts
      width 49%

      .contacts_list
        list-style none

        li
          padding 5px 0 5px 40px
          p
            font-size 22px
            color #666
            .our_site
              text-decoration none
              color #999
            .our_site:hover
              color #39c
            .our_site:active
              color #666


    @media screen and (min-width: 320px) and (max-width: 1023px)
      .question
        font-size 19px
      .contacts
        font-size 19px
      #content
        .content_item
          padding 0

    @media screen and (min-width: 320px) and (max-width: 768px)
      .question
        width 63%
        padding-bottom 40px

    @media screen and (min-width: 320px) and (max-width: 639px)

      .goods
        padding-bottom 50px

      .question
        width 90%

      .contacts
        width 100%
