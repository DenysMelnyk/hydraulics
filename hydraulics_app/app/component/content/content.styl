#content
  margin 0 auto
  max-width 960px
  padding 40px 0
  *
    margin 0
    padding 0

  .title_link
    color #303030
  .title_link:hover
    text-decoration none
    color #666

  .content_item
    padding 5% 0
    display flex
    flex-wrap wrap
    justify-content space-around


    .goods
      display flex
      flex-direction column
      align-items center

      .catalog
        width 120px
        height 30px
        font-size 12px
        background-color #DE030E
        border-radius 17px
        color #fff
        border none
        margin-bottom 20px
        cursor pointer
      .catalog:hover
        background-color #c33
      .catalog:active
        background-color #900
        outline none
      .catalog:focus
        outline none

      .goods_title
        width 245px
        font-size 26px
        text-align center
        padding 20px 0

      .goods_item
        list-style none

        a
          font-size 17px
          text-decoration none
          color #518ABE
        a:hover
          color #666

    .bg_color:hover
      opacity 0.9
      background-color rgb(153,153,153)
    .bg_color:active
      opacity 0.5
      background-color rgb(255,255,255)

    .item_title
      font-weight bold
      font-size 21px
      padding-bottom 6px

    .question
      width 43%

      p
        text-align center
        color #666
        font-size 17px
        padding-bottom 15px

        span
          font-size 18px

      .consultation
        width 220px
        height 32px
        border none
        background-color #DE030E
        border-radius 17px
        color #fff
        font-size 14px
        cursor pointer
      .consultation:hover
        background-color #c33
      .consultation:active
        background-color #900
        outline none
      .consultation:focus
        outline none

    .phone
      padding-right 9px
      padding-bottom 2px

    .contacts
      width 49%

    .contacts_list
      list-style none

    .location
      background url(../img/002-facebook-placeholder-for-locate-places-on-maps.png) 0% 50% no-repeat
      background-size 2.9rem
    .phone_of
      background url(../img/003-phone-receiver.png) 1% 48% no-repeat
      background-size 2.5rem
    .mail
      background url(../img/001-mail-black-envelope-symbol.png) 1% 50% no-repeat
      background-size 2.5rem
    .contacts_item
      padding 5px 0 5px 40px
    .contacts_txt
      font-size 17px
      color #666
      .our_site
        text-decoration none
        color #999
      .our_site:hover
        color #39c
      .our_site:active
        color #666


    @media screen and (min-width: 320px) and (max-width: 1023px)
      .question
        font-size 19px
      .contacts
        font-size 19px
      #content
        .content_item
          padding 0

    @media screen and (min-width: 320px) and (max-width: 768px)
      .question
        width 63%
        padding-bottom 40px

    @media screen and (min-width: 320px) and (max-width: 639px)

      .goods
        padding-bottom 50px

      .question
        width 90%

      .contacts
        width 100%
